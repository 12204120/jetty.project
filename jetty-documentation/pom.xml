          <execution>
            <id>index-html</id>
            <phase>compile</phase>
            <goals>
              <goal>generate-html</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.build.directory}/docbook/index</sourceDirectory>
              <targetDirectory>${project.build.directory}/html/index</targetDirectory>
              <includes>index.xml</includes>
